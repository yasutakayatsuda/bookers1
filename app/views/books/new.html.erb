<h1>新規投稿</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
  
  
<% end %>


  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラー
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>

